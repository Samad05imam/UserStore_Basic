<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users Interface</title>
    <!-- <link rel="stylesheet" href="/css/style.css"> -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-purple-800">
    <div class="w-full h-full ml-1/4 bg-purple-800 m-100 p-10">
        <div class="flex align-center justify-between">
            <h1 class="text-black text-3xl tracking-tighter">All Users</h1>
            <a class="home bg-purple-900 border-2 p-2 border-black" href="/">Go Back To Home</a>
        </div>
        <div class="users flex gap-5 flex-wrap">
            <% if(users.length > 0) { %>
                <% users.forEach(function(user) { %>
                    <div class="user w-72 mt-10 p-3 bg-purple-900 rounded-lg">
                        <div class="w-full h-52 rounded-lg bg-gray-500 overflow-hidden">
                            <img class="w-full h-full" src="<%= user.image %>" alt="User Image">
                        </div>
                        <h3 class="text-xl tracking-tighter bg-transparent font-mono m-3 text-white"><%= user.name %></h3>
                        <h5 class="text-xl tracking-tighter bg-transparent m-3 font-mono text-white"><%= user.email %></h5>
                        <div class="flex bg-transparent justify-between">
                            <a href="/edit/<%= user._id %>" class="text-black h-10 border-2 border-black p-2 rounded-lg bg-purple-400">Edit User</a>
                            <a href="/delete/<%= user._id %>" class="text-black h-10 border-2 border-black p-2 rounded-lg bg-purple-400">Delete User</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h1 class="text-gray-700 p-5">No Users Yet</h1>
            <% } %>
        </div>
    </div>

    <script src="/javascript/script.js"></script>
</body>
</html>
